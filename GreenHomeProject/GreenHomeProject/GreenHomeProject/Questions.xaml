<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHomeProject.Questions"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lets answer a few Questions!"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   TextColor="White"/>
            <Button Text="Next"
                    TextColor="Black"
                    BorderColor="Gray"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Clicked="NextButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>